<!DOCTYPE html>
<html>
<head>
  <title>Splurty</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name=viewport content="width=device-width, initial-scale=1">
</head>
<body>
  <%= render "layouts/header" %>
  <%= render "layouts/modal" %>
  <div class="container">
    <% if flash[:error].present? %>
      <div class ="col-xs-10 col-xs-offset-1 alert alert-danger">
        <%= flash[:error].html_safe %>
      </div>
    <% end %>
    <%= yield %>
    <footer>
      <div class="container">
        <div class="col-xs-12 col-sm-6">
          <%= link_to "This isn't enough, I need more", root_path, class: 'next-quote' %>
        </div>
        <div class="col-xs-12 col-sm-6 footer-blurb">
          Proudly forged in Lancaster Pennsylvania by <em>Jonathan Mast</em>
        </div>
      </div>
    </footer>
  </div>
</body>
</html>
